


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
        <a asp-action="Create">Create New</a>
    </p>

    <form method="post">
        <h3>Seleccione una Planta de la lista</h3>
        <select name="Plantas">
            @foreach (var item in ViewBag.Plantas)
            {
                <option value=@item.Nombre>@item.Nombre</option>

            }
        </select>
        <input type="submit" name="Ver datos" id="Ver Datos" />
        <hr />
        <div content="width=device-width">@ViewBag.Desc</div>

    </form>






</body>
</html>
