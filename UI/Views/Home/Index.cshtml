@model UI.ViewModels.PlantasDescripcionesVM


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
        <a asp-action="Create">Create New</a>
    </p>

    <form method="post">
        <h3>Seleccione una Planta de la lista</h3>
        <hr />
        <select name="Nombre"> @*TODO -> Hacerlo con model binding y que la segunda vez se quede seleccionada la planta*@
            @foreach (var item in @Model.Plantas)
            {
                <option value=@item.Nombre>@item.Nombre</option>

                if(@Model.PlantaSeleccionada.Nombre != null)
                {
                    <option selected value=@Model.PlantaSeleccionada.Nombre></option>
                }
            }
        </select>
        <input type="submit" name="Ver datos" id="Ver Datos" />
        <hr />
        @if(@Model.PlantaSeleccionada != null)
        {
            <div content="width=device-width">@Model.PlantaSeleccionada.Datos</div>
        }
        

    </form>






</body>
</html>
