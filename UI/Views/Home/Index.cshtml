@model UI.ViewModels.PlantasDescripcionesVM


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
        <a asp-action="Create">Create New</a>
    </p>

    <form method="post">
        <h3>Seleccione una Planta de la lista</h3>
        <hr />
        <select name="Nombre">
            @*TODO -> Hacerlo con model binding -->> 
                Hecho con model binding de clsPlanta
                porque no conseguia que recogiese 
                el dato desde el atributo Nombre
                del atributo PlantaSeleccionada
                del viewModel
               
            y que la segunda vez se quede seleccionada la planta  ->> Hecho*@
            @{
                bool salir = false;
                for (int i = 0; i< @Model.Plantas.Count && !salir; i++)
                {


                    if (@Model.PlantaSeleccionada.Nombre.Equals(@Model.Plantas.ElementAt(i).Nombre))
                    {
                        <option selected="selected" value=@Model.PlantaSeleccionada.Nombre>@Model.PlantaSeleccionada.Nombre</option>
                    }
                    else
                    {
                        <option value=@Model.Plantas.ElementAt(i).Nombre>@Model.Plantas.ElementAt(i).Nombre</option>
                    }
                }
            }
            
        </select>
        <input type="submit" name="Ver datos" id="Ver Datos" />
        <hr />
        @if (!@Model.PlantaSeleccionada.Datos.Equals(""))
        {
            <div content="width=device-width">@Model.PlantaSeleccionada.Datos</div>
        }


    </form>






</body>
</html>
